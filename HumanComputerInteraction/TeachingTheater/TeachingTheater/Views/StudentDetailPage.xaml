<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeachingTheater.Views.StudentDetailPage">

    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Mirror View" FontSize="Large"/>
            <StackLayout Padding="10">
                <Button Text="Show on Projector"/>
                <Button Text="Show on Other Student Screens"/>
            </StackLayout>
            <Label Text="Control" FontSize="Large"/>
            <StackLayout Padding="10">
                <Button Text="Control this Computer"/>
                <Button Text="Release Control to Student"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>