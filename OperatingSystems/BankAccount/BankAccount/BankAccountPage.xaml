<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:BankAccount" 
             x:Class="BankAccount.BankAccountPage"
             xmlns:modelViews="clr-namespace:BankAccount.ViewModels">
    <ContentPage.BindingContext>
        <modelViews:BankViewModel/>
    </ContentPage.BindingContext>

    <StackLayout>
        <ListView x:Name="ListView" 
                  ItemsSource="{Binding Messages}" 
                  ItemSelected="ListView_OnItemSelected" 
                  ItemTapped="ListView_OnItemTapped"
                  VerticalOptions="FillAndExpand"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding MessageContent}">
                        <TextCell.ContextActions>
                            <MenuItem Text="Delete" 
                                      IsDestructive="True"/>
                        </TextCell.ContextActions>
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Entry Text="{Binding MessageText}" Keyboard="Chat"/>
        <Button Text="Send" Command="{Binding SubmitCommand}"/>
    </StackLayout>
</ContentPage>
