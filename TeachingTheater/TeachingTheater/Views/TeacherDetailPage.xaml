<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeachingTheater.Views.TeacherDetailPage"
             Title="Teacher Controls">
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Mirror View" FontSize="Large"/>
            <StackLayout Padding="10">
                <Button Text="Show on Projector"/>
                <Button Text="Show on All Student Screens"/>
            </StackLayout>
            <Label Text="Lighting" FontSize="Large"/>
            <Grid Padding="10">
                <Slider x:Name="LightSlider" Value="4" Maximum="9" Minimum="1" ValueChanged="Slider_ValueChanged" Grid.ColumnSpan="3"/>
                <Label Text="Low" Grid.Row="1" Grid.Column="0" FontSize="Small" HorizontalTextAlignment="Start"/>
                <Label Text="Medium" Grid.Row="1" Grid.Column="1" FontSize="Small" HorizontalTextAlignment="Center"/>
                <Label Text="High" Grid.Row="1" Grid.Column="2" FontSize="Small" HorizontalTextAlignment="End"/>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>